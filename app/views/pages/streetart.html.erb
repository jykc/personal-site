<!--Carousel-->
<div class="carousel-container">
  <div class="modal fade and carousel slide" id="lightbox">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Buenos Aires Street Art</h4>
        </div>
        <div class="modal-body">
          <ol class="carousel-indicators">
            <li data-target="#lightbox" data-slide-to="0" class="active"></li>
            <li data-target="#lightbox" data-slide-to="1"></li>
            <li data-target="#lightbox" data-slide-to="2"></li>
            <li data-target="#lightbox" data-slide-to="3"></li>
            <li data-target="#lightbox" data-slide-to="4"></li>
            <li data-target="#lightbox" data-slide-to="5"></li>
          </ol>
          <div class="carousel-inner">
            <div class="item active">
              <img src="assets/photos/streetart1.jpg" alt="Buenos Aires Street Art First Slide">
            </div>
            <div class="item">
              <img src="assets/photos/streetart2.jpg" alt="Buenos Aires Street Art Second Slide">
            </div>
            <div class="item">
              <img src="assets/photos/streetart3.jpg" alt="Buenos Aires Street Art Third Slide">
            </div>
            <div class="item">
              <img src="assets/photos/streetart4.jpg" alt="Buenos Aires Street Art Fourth Slide">
            </div>
            <div class="item">
              <img src="assets/photos/streetart5.jpg" alt="Buenos Aires Street Art Fifth Slide">
            </div>
            <div class="item">
              <img src="assets/photos/streetart6.jpg" alt="Buenos Aires Street Art Sixth Slide">
            </div>
          </div><!-- /.carousel-inner -->
          <a class="left carousel-control" href="#lightbox" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
          </a>
          <a class="right carousel-control" href="#lightbox" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
          </a>
        </div><!-- /.modal-body -->
        <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
</div><!-- /.container -->
<!-- Carousel end -->

